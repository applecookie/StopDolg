.menu__list.active2 {
  margin-bottom: 86px;
}

.insolvency

  .header:before
    background-image url(../img/backgrounds/annulment.jpg)

  &__banner
    padding-bottom 30px

    color $c-white

    overflow hidden
    clip-path polygon(0% 0%, 100% 0%, 100% 91%, 65% 100%, 0% 91%)

    @media (max-width 1024px)
      padding-bottom 80px

    @media (max-width 768px)
      padding-bottom 0
      clip-path polygon(0% 0%, 100% 0%, 280% 94%, 65% 100%, 0% 99%)

  &__title
    padding 0
    margin 0 0 10px
    border none

    color inherit
    font-size 56px
    font-weight 300
    line-height 1.2
    text-align center
    text-transform uppercase

    @media (max-width 768px)
      font-size 23px

    &-footnote
      display block
      margin-top .9em

      color inherit
      font-size 19px
      text-transform none

      @media (max-width 768px)
        font-size 14px

  &__form
    display flex

    @media (max-width 768px)
      align-items center
      flex-direction column-reverse

  &__expert
    flex-basis 37.5%

  &__calculator
    flex-basis 62.5%
    padding-top 24px

    @media (max-width 768px)
      margin-bottom 27px

  &__stages
    padding 22px 28px 27px
    border 8px solid $c-white

    text-align center

    background-color $c-border-input
    border-radius 15px

    @media (max-width 768px)
      padding 12px 10px 21px

    &-block
      margin-top -98px
      padding-top 190px
      padding-bottom 122px

      &:before
        background-color #dbdbdb

    &-list
      margin-bottom 10px

    .button
      padding-top 15px
      padding-bottom @padding-top

      border-radius 10px

  &__guarantee
    margin-top -86px
    padding-top 151px
    padding-bottom 98px

    @media (max-width 1024px)
      margin-top -121px

    &:before
      background-image url(../img/insolvency/guarantee-bg.jpg)

    .section__title
      margin-bottom 1em

    &-list
      margin-bottom 48px

    // костыль
    .practice-block__form
      width auto
      max-width $container-width

  &__managers
    margin-top -78px
    padding-top 142px
    padding-bottom 135px

    &:before
      background-position 100% 50%
      background-image url(../img/insolvency/managers-bg.jpg)

    .section__title
      margin-bottom 1em

  &__articles
    margin-top -73px
    padding-top 135px
    padding-bottom 90px

    @media (max-width 768px)
      padding-bottom 46px

    &:before
      background-image url(../img/insolvency/articles-bg.jpg)

    &-list
      margin-bottom 20px

    &-btn
      text-align center

  &__mistakes
    margin-top -56px
    padding-top 124px
    padding-bottom 96px

    color $c-secondary-3

    @media (max-width 1024px)
      margin-top -65px

    @media (max-width 768px)
      padding-bottom 41px

    &:before
      background-size 100% auto
      background-image url(../img/insolvency/mistakes-bg.jpg), linear-gradient(0,#a9a9a9,transparent)

      @media (max-width 768px)
        background-image  url(../img/insolvency/mistakes-bg-320.png), linear-gradient(0,#a9a9a9,transparent)

    .section__title
      margin-bottom .6em

  &__faq
    max-width 736px
    margin 0 auto 53px

    @media (max-width 768px)
      margin-bottom 30px

    &-btn
      margin 0 40px

      text-align center

      .button
        padding-left .9em
        padding-right @padding-left

        letter-spacing .1px

        @media (max-width 480px)
          font-size 16px
