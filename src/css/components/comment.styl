.comment
  display flex
  flex-wrap wrap
  justify-content space-between
  padding 30px

  background-color $c-white
  border-radius 2px
  box-shadow 7px 7px 5px rgba($c-black,10%)

  @media (max-width 768px)
    justify-content center
    padding 19px

  &__avatar
    display flex
    flex 0 0 auto
    width 125px
    height @width

    box-shadow 0 0 10px rgba($c-black,25%)
    border-radius 50%
    overflow hidden

    @media (max-width 768px)
      width 100px
      height @width
      margin-bottom 20px

    img
      display block
      width 100%
      height auto
      object-fit cover

  &__body
    flex-basis calc(100% - 155px)

    @media (max-width 768px)
      flex-basis 100%

  &__created
    display inline-block
    margin-bottom 1.25em

    color $c-semi-secondary-light
    font-size 16px

    @media (max-width 768px)
      font-size 14px

  &__blockquote
    margin 0
    overflow hidden
    margin-bottom 1.33em

    color $c-secondary
    font-size 18px
    line-height 1.2

    @media (max-width 768px)
      font-size 14px

    p
      margin-bottom 1.33em

      &:last-of-type
        margin-bottom 0

  &__footnote
    color $c-semi-text
    font-size 14px

    @media (max-width 768px)
      font-size 11px

  &__footer
    flex-basis 100%
    padding-top 30px

    text-align right

    @media (max-width 768px)
      padding-top 20px

    &._hide
      display none
