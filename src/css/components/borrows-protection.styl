.borrows-protection

  .header:before
    background-image url(../img/backgrounds/borrows-protection.jpg)

  &__banner
    padding-bottom 109px

    @media (max-width 768px)
      padding 6px 0 44px

  &__title
    margin-bottom .79em

  &__about
    display flex
    flex-direction column
    align-items center
    margin-bottom 60px

    @media (max-width 768px)
      align-items flex-start
      padding-left 7px
      margin-bottom 25px

    &-description
      margin 2em 0 0

      font-size 18px
      font-weight 400

      @media (max-width 768px)
        margin-top 1.6em
        padding-left 6px

        font-size 14px

  &__how
    &-list
      margin 0 -30px

      &.how-list

        @media (max-width 1024px) and (min-width 768px)
          flex-wrap wrap
          margin 0 auto
          max-width 468px

        @media (max-width 768px)
          br
            display none

        .how-list
          &__item
            flex-grow 0
            min-width 156px

            @media (max-width 1024px) and (min-width 768px)
              margin-bottom 25px

          &__text
            @media (max-width 768px)
              max-width 209px

    &-btn
      margin-top 65px

      text-align center

      @media (max-width 1024px) and (min-width 768px)
        margin-top 40px

      @media (max-width 768px)
        margin-top 30px

  &__heading
    margin-bottom .8em

    @media (max-width 768px)
      margin-bottom .6em
