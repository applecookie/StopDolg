.profile-card
  $c-profile-list = #006c69
  height 100%
  display flex

  color $c-profile-list

  background-color $c-white
  box-shadow 0 0 15px rgba($c-black,5%)

  @media (max-width 768px)
    flex-wrap wrap
    align-content flex-start

  &__left
  &__right
    box-sizing border-box
    padding 20px

  &__left
    flex 0 0 47%

    text-align center

    @media (max-width 768px)
      flex 1 1 100%
      padding-bottom 0

  &__right
    padding-left 0

    @media (max-width 768px)
      flex 1 1 100%
      padding 20px

  &__img
    display block
    max-width 160px
    margin 0 auto 16px

    img
      width 100%
      height auto

  &__link
    display inline-block
    margin 0 auto

    color inherit
    font-size 14px
    line-height 1.1
    text-decoration none

    @media (max-width 768px)
      br
        //display none

    &:hover
      text-decoration underline

  &__name
    margin-bottom .2em

    @media (max-width 768px)
      text-align center

    &-first
      display block
      font-size 22px
      font-weight 900

    &-last
      display block
      font-size 18px
      font-weight 700

  &__position
    display block
    margin-bottom .5em

  &__position
  &__skills
    color #5e5e5e
    font-size 14px

  &__skills
    list-style none

    &-item
      $profile-list-dot-size = 3px
      position relative
      padding-left $profile-list-dot-size*2

      &:not(:last-child)
        margin-bottom .5em

      &:before
        content ''
        display block
        position absolute
        top 7px
        left 0
        width $profile-list-dot-size
        height @width

        background-color $c-profile-list
        border-radius 50%

