.video-card
  // legacy: не делают по бему к блокам внешние отступы
  margin-bottom 0
  padding 10px 30px

  &__iframe
    margin-bottom 16px

  &__title
    padding 0
    margin-bottom .4em

    color inherit
    font-size 18px
    font-weight 700

    @media (max-width 768px)
      font-size 14px

  &__description
    margin 0
    // WTF
    min-height auto

    color #fefefe
    font-size 16px
    line-height 1.3

    @media (max-width 768px)
      font-size 12px
