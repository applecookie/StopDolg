.new-form

  &__fieldset
    margin-bottom 22px

    &._row
      margin-bottom 40px

    &._card
      padding 20px 20px 0

      background-color $c-white
      border-radius 15px
      box-shadow 0 0 10px rgba($c-black,15%)

      &:last-of-type
        margin-bottom 44px

        &:first-of-type
          margin-bottom 0

      @media (max-width 768px)
        padding 15px 15px 5px

  &__row
    display flex
    flex-wrap wrap

    &._reference
      flex-wrap nowrap

      &:not(:last-child)
        margin-bottom 20px

      .reference
        flex 0 0 auto
        align-self flex-end
        // 0.5*((высота инпута) - (высота справки)) = 0.5*(40-24)
        margin 0 7px 8px 15px

        @media (max-width 768px)
          margin-left 6px
          margin-right 0

    &._col-2
      col-2-gap = 44px

      .new-form__item
        flex-grow 0
        flex-basis "calc(50% - %s/2)" % (col-2-gap)
        margin-bottom 20px

        @media (max-width 768px)
          flex-basis 100%
          margin-bottom 10px

        &:nth-of-type(2n+1):not(:last-child)
          margin-right col-2-gap

          @media (max-width 768px)
            margin-right 0

    &._inline
      align-items center
      margin-bottom 20px

      @media (max-width 768px)
        flex-wrap wrap

      .new-form__item

        &:not(:last-child)
          margin-right 22px

          @media (max-width 768px)
            margin-right 0
            margin-bottom 20px


  &__item
    flex 1
    display block

    @media (max-width 768px)
      flex-basis 100%

      &:not(:last-of-type)
        margin-bottom 20px

  &__input
    &._select
    &[type="text"]
    &[type="email"]
    &[type="tel"]
    &[type="number"]
      height 38px
      padding 9px 13px
      width 100%

      color $c-input
      font-size 16px
      font-weight 300
      line-height 1
      text-overflow ellipsis

      background $c-white linear-gradient(to top,rgba($c-black,15%),rgba($c-white,15%))

      border 1px solid $c-border-input
      border-radius 3px
      box-shadow inset 0 2px 2px rgba($c-black,15%)

      +placeholder()
        color inherit

    &._select
      color #808080

      background-image url(../img/caret.svg), linear-gradient(to top,rgba($c-black,15%),rgba($c-white,15%))
      background-repeat no-repeat
      background-position calc(100% - 8px) calc(50% + 5px), 0

      appearance none
      -webkit-appearance none
      -moz-appearance none
      -o-appearance none

      @media (max-width 768px)
        font-size 12px

        background-position 100% calc(50% + 3px), 0
        background-size 18px, 100%

      option
        color $c-input
        font-size 16px

      .select__placeholder
        color #808080

  &__help-text
    display block

    color $c-semi-text
    font-size 14px

    @media (max-width 768px)
      font-size 10px
      text-align right

  &__label
    display inline-block
    margin-bottom .5em

    color $c-secondary-3
    font-size 18px

    @media (max-width 768px)
      font-size 11px

  &__checkbox
    margin-bottom 40px

    @media (max-width 768px)
      margin-bottom 18px

  &__footer
    display flex
    flex-direction column
    align-items center
    margin-top 44px

    text-align center

  &__repeater
    display flex
    flex-wrap wrap
    justify-content space-between

    @media (max-width 768px)
      flex-direction column
      align-items center

    .button
      border-radius 20px

    &-add
    &-del

      @media (max-width 768px)
        margin-bottom 15px

    &-add
      @media (max-width 768px)
        order 1

    &-del

      @media (max-width 768px)
        order 0

    .statement__price
      flex none

      @media (max-width 768px)
        order 2






