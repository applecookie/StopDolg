.note

  &__header
    margin-bottom 1.2em

    text-align center

    @media (max-width 640px)
      margin-bottom .9em

  &__title
    display inline-block
    padding .4em 1.9em

    color $c-primary
    font-size 24px
    font-weight 700
    text-transform uppercase

    background-color $c-white
    border-radius 1em

    @media (max-width 640px)
      font-size 20px

  &__text
    margin 0

    font-size 20px
    font-weight 700

    @media (max-width 640px)
      font-size 18px
      text-align center
