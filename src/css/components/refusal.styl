.refusal

  &:before
    background-image url(../img/backgrounds/anti-collector.jpg)

    @media (max-width 768px)
      background-position-x 14%
      transform scaleX(-1)

  &__banner
    padding-top 99px
    padding-bottom 40px

    color $c-white

    @media (max-width 768px)
      padding 30px 20px 18px

  &__title
    padding 0
    margin 0 0 .8em
    border none

    color inherit
    font-size 40px
    font-weight 300
    line-height 1.2
    letter-spacing -2.2px
    text-align center
    text-transform uppercase

    @media (max-width 768px)
      margin-bottom 1.1em

      font-size 17px
      line-height 1.4
      letter-spacing 1px

  &__description
    margin-bottom 1.5em

    font-size 20px
    letter-spacing -1.1px
    text-align center

    @media (max-width 768px)
      font-size 14px
      letter-spacing 1px

  &__about
    padding-left 75px

    @media (max-width 768px)
      padding-left 0

  &__list
    display flex
    flex-wrap wrap
    justify-content center

    list-style none
    margin 0 0 40px

    @media (max-width 768px)
      margin-bottom 15px

    &-item
      flex 1 1 171px
      margin-bottom 16px

      text-align center

    picture
      display block
      margin-bottom .5em


  &__list-heading
    margin 0 0 1.3em
    padding 0

    color $c-white
    font-size 28px
    font-weight 400
    letter-spacing -1.3px
    text-transform uppercase

    @media (max-width 768px)
      margin-bottom .7em

      font-size 19px
      letter-spacing 0
      text-align center

  &__how
    margin-top -75px
    padding-top 75px + 50px
    padding-bottom 133px

    text-align center

    @media (max-width 768px)
      margin-top -14px
      padding-top 14px + 30px
      padding-left 20px
      padding-right @padding-left
      padding-bottom 70px

    &:before
      background-image url(../img/backgrounds/refusal-how.jpg)

    &-list
      // article for ie
      max-width 100%
      display inline-block
      padding 22px 40px 30px
      margin-bottom 23px

      text-align left

      background-color $c-white
      border-radius 15px
      box-shadow 0 0 15px rgba($c-black, 15%)

      @media (max-width 768px)
        padding 16px 20px

    &-heading
      padding 0
      margin-bottom .7em

      color $c-secondary
      font-size 32px
      font-weight 400
      text-align center
      text-transform uppercase

      @media (max-width 768px)
        font-size 18px

    &-footnote
      max-width 450px
      margin 0 auto 1.4em

      color $c-secondary-3
      font-size 18px
      font-weight 700
      letter-spacing 1.3px

      @media (max-width 768px)
        padding 0 1em
        font-size 14px
