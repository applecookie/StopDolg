.team-list

  &__item

    &-img
      box-sizing border-box
      position relative
      padding-bottom 100%
      margin 0 auto 21px
      width 100%

      border-radius 50%
      box-shadow 0 4px 14px rgba(0, 0, 0, 0.2), 0 0 0 4px #FBFBFB

      img
        position absolute
        top 0

        display block
        width 100%
        // для нестандарных img
        height 100%
        object-fit cover

        border-radius 50%

    &-name
      margin-bottom 5px

      color $c-secondary
      font-size 21px

    &-position
      color $c-secondary
      font-size 16px

.slikparntcont
  margin-right 0

  .child
    box-sizing border-box
    max-width 200px
    min-height 321px
    margin 0 auto 10px
    padding 15px

    text-align center
