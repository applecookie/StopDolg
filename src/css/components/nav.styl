.nav
  box-shadow

  &__list
    display flex
    justify-content space-around
    position relative

    list-style none

    color $c-white
    font-size 16px
    line-height 1

    background-color $c-nav-bg
    border-radius 10px
    box-shadow inset 0 5px 10px rgba($c-black,35%)

  &__item
    flex 1

    transition $d-transition

    &:first-child
      border-radius 10px 0 0 10px

    &:last-child
      border-radius 0 10px 10px 0

    &._active
    &:hover
      background-color $c-nav-active
      box-shadow inset 0 5px 10px rgba($c-black,35%)

    &._parent
      &:hover
        z-index 1

      &._active
      &:hover
        .nav__sub-list
          display flex

  &__link
    display flex
    justify-content center
    align-items center
    height 100%
    padding .6875em

    color inherit
    text-decoration none

  &__sub-list
    display none
    justify-content space-around

    position absolute
    top calc(100% + 10px)
    left 0
    right 0
    width 100%

    list-style none

    background-color $c-subnav-bg
    border-radius 10px
    box-shadow inset 0 5px 10px rgba($c-black,35%)

    &:before
      content ''
      position absolute
      top -10px
      left 0
      right 0
      width 100%
      height 10px

    &-item
      flex 1

      transition $d-transition

      &:first-child
        border-radius 10px 0 0 10px

      &:last-child
        border-radius 0 10px 10px 0

      &._active
      &:hover
        background-color $c-subnav-active
        box-shadow inset 0 5px 10px rgba($c-black,35%)

      a
        display flex
        justify-content center
        align-items center
        height 100%
        padding .6875em

        color inherit
        font-size 14px
        text-decoration none
        text-align center

