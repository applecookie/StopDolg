.calculator-form
  $c-calculator-form-bg = #005957
  box-sizing border-box
  max-width 552px
  padding 25px 38px 32px 36px
  border 8px solid $c-white

  color $c-white

  background-color $c-calculator-form-bg
  border-radius 20px

  @media (max-width 768px)
    padding 17px 12px 22px
    border-width 4px

    border-radius 15px

  &__heading
    margin-bottom 1em
    //legacy
    padding 0

    color inherit
    font-size 22px
    font-weight 300
    letter-spacing -.1px
    text-align center
    text-transform uppercase

    @media (max-width 768px)
      margin-bottom .9em

      font-size 18px
      letter-spacing -1.1px

  &__fieldset
    margin-bottom 20px
    padding 13px 13px 16px

    background-color lighten($c-calculator-form-bg,3%)
    border-radius 10px

    @media (max-width 768px)
      margin-right 10px
      margin-left @margin-right
      padding-bottom 4px

  &__row
    display flex
    flex-wrap wrap
    align-items center
    margin-bottom 16px

    @media (max-width 768px)
      margin-right 10px
      margin-left @margin-right

  &__checkboxes
    display flex
    justify-content center

    @media (max-width 768px)
      flex-wrap wrap
      max-width 124px
      margin 0 auto

      .checkbox
        flex 1 1 100%
        margin-left 0
        margin-bottom 6px

        &__label
          font-size 14px
          line-height 24px

          &:before
            top -4px
            width 20px
            height @width

            font-size 14px
            line-height @width

  &__footer
    text-align center

    .button
      padding-top .55em
      padding-bottom @padding-top
