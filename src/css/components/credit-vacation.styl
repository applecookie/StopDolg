.credit-vacation
  .header:before
    background-image url(../img/backgrounds/credit-vacation.jpg)

  &__banner
    padding-bottom 110px

    @media (max-width 1024px)
      padding 6px 20px 50px

  &__title
    margin-bottom .7em

  &__description
    display flex
    margin-bottom 30px

    @media (max-width 1024px)
      align-items flex-end

    @media (max-width 640px)
      flex-direction column
      align-items center

    &-img
      box-sizing border-box
      flex 0 0 35%
      padding 0 3% 0 5%

      @media (max-width 640px)
        padding 0
        max-width 152px

      img
        display block
        width 100%
        height auto

    &-text
      padding-top 1em

      font-size 16px

      @media (max-width 768px)
        font-size 14px

      p
        margin-bottom 1em

        &:last-child
          margin-bottom 0

  &__borrows
    margin-bottom 50px

    @media (max-width 768px)
      margin-bottom 30px

    &-list
      max-width 596px
      margin auto

  &__about
    &-alert
      margin-bottom 40px

  &__how-list
    max-width 750px
    margin 0 auto 25px

    &-footnote
      max-width 596px
      margin 0 auto 3em

      font-size 16px
      text-align center

      @media (max-width 640px)
        margin-bottom 2em

        font-size 14px

  &__note
    max-width 702px
    margin 0 auto 50px

    @media (max-width 640px)
      margin-bottom 30px

  &__how
    &-alert
      margin-bottom 45px

      @media (max-width 640px)
        margin-bottom 30px

    &-hammer-list
      padding-left 16%
      margin-bottom 50px

      @media (max-width 768px)
        margin-bottom 30px
        padding-left 0

  &__options
    display flex
    align-items center
    justify-content space-around

    @media (max-width 1024px)
      flex-direction column

    &-btn
      flex 1

    &-text
      margin .5em

      font-size 22px

      @media (max-width 640px)
        font-size 16px

  &-statement
    .header:before
      background-image url(../img/backgrounds/credit-vacation.jpg)

    &__banner
      padding-bottom 109px

      @media (max-width 768px)
        padding 6px 20px 44px

    &__title
      margin-bottom .3em

    &__about
      display flex
      align-items center

      @media (max-width 640px)
        flex-direction column-reverse

    &__img
      flex 0 0 22%
      align-self flex-end
      padding 0 25px

      text-align center

      @media (max-width 640px)
        align-self center

      img
        display block
        width 100%
        height auto

    &__description
      flex 1
      margin-bottom .75em

      font-size 16px

      @media (max-width 768px)
        font-size 12px

      p
        margin-bottom .5em

        &:last-child
          margin-bottom 0
