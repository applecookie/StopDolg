.insolvency-defence

  .header:before
    background-image url(../img/backgrounds/insolvency-defence.jpg)

  &__banner
    padding-bottom 140px

    color $c-white

    @media (max-width 768px)
      padding 6px 20px 30px

  &__title
    margin-bottom .4em

    @media (max-width 768px)
      margin-bottom .9em

  &__about
    margin-bottom 2.6em

    &-inner
      margin 0 auto 2.2em
      max-width 640px

    &-text
      margin-bottom 1.5em

      font-size 20px

      @media (max-width 768px)
        margin-bottom 2.2em

        font-size 14px

    &-list
      padding 0 4%

      @media (max-width 768px)
        padding 0 9%

  &__alert
    margin 0 auto 2.4em
    max-width 630px

    @media (max-width 768px)
      margin-bottom 1.1em

    @media (max-width 640px)
      margin-left -20px
      margin-right @margin-left

  &__figure
    text-align center
    overflow hidden

    &-img
      display block
      margin-bottom 1.37em
      padding 0 3.5%

      @media (max-width 480px)
        margin-bottom 1.1em
        margin-right -30%
        margin-left -21%

      img
        display block
        width 100%
        height auto

    &-caption
      font-size 26px
      font-weight 700
      line-height 1.35
      text-transform uppercase

      @media (max-width 768px)
        font-size 18px

  &__how
    display flex
    align-items flex-end
    padding 0 20px
    margin 0 auto 50px

    @media (max-width 768px)
      margin-bottom 0
      padding 0

    &:after
      position absolute
      top 100%
      left 0
      right 0


    section-divider(2px)

    @media (max-width 768px)
      &:after
        display none

  &__expert
    flex 0 0 auto

    @media (max-width 768px)
      display none

    .expert
      &__card
        bottom 30px

  &__video
    margin-bottom 35px
    padding-left 5%

    @media (max-width 768px)
      padding-left 0
      margin-bottom 0

      .video
        display flex
        flex-direction column-reverse
        margin-top 40px

        &__caption
          margin-top 1.5em
          margin-bottom 0

  &__blockquote
    margin-bottom .5em

  &__youtube
    max-width 390px

    @media (max-width 768px)
      max-width none

  &__btn
    text-align center

  &__statement

    &-banner
      padding-bottom 123px

      @media (max-width 768px)
        padding 6px 20px 44px
