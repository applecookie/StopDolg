.anti-collector

  &:before
    background-image url(../img/backgrounds/anti-collector.jpg)

    @media (max-width 768px)
      background-position-x 14%
      transform scaleX(-1)

  &__form
    padding-top 98px
    padding-bottom 105px

    color $c-white

    @media (max-width 768px)
      padding-left 20px
      padding-right @padding-left
      padding-top 46px

    &-checkbox
      margin-bottom 1.8em

      font-size 14px

  &__title
    padding 0
    margin 0 0 1.25em
    border none

    color inherit
    font-size 40px
    font-weight 300
    line-height 1.2
    letter-spacing -2.2px
    text-align center
    text-transform uppercase

    @media (max-width 768px)
      font-size 17px
      margin-bottom 24px

  &__description
    margin-bottom 0

    font-size 16px

    @media (max-width 768px)
      text-align center
