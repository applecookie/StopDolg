.legal-advice

  .header:before
    background-image url(../img/backgrounds/legal-advice.jpg)

  &__banner
    padding-bottom 127px

    @media (max-width 768px)
      padding 6px 0 68px

  &__title
    margin-bottom .49em

    @media (max-width 768px)
      margin-bottom .6em

  &__heading
    margin-bottom .8em

    @media (max-width 768px)
      margin-bottom .6em

  &__features
    display flex
    align-items flex-end
    justify-content space-between
    position relative
    margin-bottom 59px

    @media (min-width 768px)
      section-divider(2px)

    @media (max-width 768px)
      flex-wrap wrap
      justify-content center
      margin-bottom 20px

    &:after
      position absolute
      top 100%

    &-img
      flex 0 1 430px

      @media (max-width 768px)
        section-divider(2px)
        margin-bottom 18px

      img
        display block
        width 100%
        height auto
        margin-left -15px

        @media (max-width 768px)
          margin-right 10px
          margin-left -8px

    &-list
      flex 1
      margin 0 0 1em 28px

      @media (max-width 768px)
        flex-basis 100%
        margin 0 30px 0 17px

  &__about
    margin-bottom 63px

    @media (max-width 768px)
      margin-bottom 25px

    &-list
      max-width 790px
      margin auto

      @media (max-width 768px)
        margin-left -10px
        white-space nowrap

  &__conditions
    margin-bottom 52px

    @media (max-width 768px)
      margin-bottom 25px

    &-content
      max-width 790px
      margin auto

    &-text
      margin-bottom .7em

    &-list
      padding-left 1.3em

      @media (max-width 768px)
        padding-left 5px

  &__how
    &-list
      padding-top 10px

      @media (max-width 768px)
        padding-top 0

        br
          display none

    &-footnote
      margin-top 2.6em
      margin-bottom 0

      font-size .9em
      text-align center

      @media (max-width 768px)
        margin-top 1.8em
        margin-left -10px

        font-size .85em
        white-space nowrap

    &-btn
      margin-top 46px
      text-align center

      @media (max-width 768px)
        margin-top 43px
