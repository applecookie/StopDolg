.mortgage-vacation
  $how-video-gap = 35px

  .header:before
    background-color #3e5958
    background-image url(../img/backgrounds/insolvency.jpg)

    @media (max-width 640px)
      background-image none

  &__banner
    padding-bottom 10px

    color $c-white

    @media (max-width 768px)
      padding-bottom 32px

    .section-banner

      &__title
        @media (max-width 768px)
          margin-bottom .5em

        &-footnote
          margin-top 2em

          @media (max-width 768px)
            margin-top 1.2em

  &__calendar
    position relative

    text-align center

    &-title
      position absolute
      top 3.9em
      right 0
      left @right
      max-width 403px
      margin 0 auto

      color $c-secondary-3
      font-size 18px
      font-weight 700
      letter-spacing -1.2px
      text-transform uppercase

      @media (max-width 640px)
        top 3.2em
        max-width 230px

        font-size 12px

    &-img
      display inline-block

      @media (max-width 640px)
        margin-left -20px
        margin-right @margin-left

      img
        display block
        width 100%
        height auto

  &__conditions
    margin-top -80px
    padding-top 145px
    padding-bottom 76px

    @media (max-width 768px)
      padding-top 108px
      padding-bottom 33px

    &:before
      background-color $c-section-bg
      background-image url(../img/mortgage-vacation/conditions-bg.jpg)
      background-size 100% auto

      @media (max-width 640px)
        background-image none

    .section__title
      margin-bottom 1.7em

      @media (max-width 768px)
        margin-bottom .6em

    .faq-list
      &__accordion
        margin-bottom 41px

      .button
        padding .7em 1.3em

  &__how
    margin-top -107px
    padding-top 162px
    padding-bottom 106px

    color $c-white

    @media (max-width 768px)
      padding-top 144px
      padding-bottom 43px

    &:before
      background-color $c-secondary

    .section__title
      margin-bottom 1.2em

      @media (max-width 768px)
        margin-bottom .7em

    &-content
      display flex

      @media (max-width 640px)
        flex-direction column

    &-list
      box-sizing border-box
      flex 1 1 44%
      padding-left 30px

      @media (max-width 640px)
        padding-left 0

    &-video
      box-sizing border-box
      display flex
      flex-direction column
      flex 1 1 56%
      padding 2px $how-video-gap

      @media (max-width 640px)
        padding 0

    .youtube-video
      @media (max-width 640px)
        order 2

    &-text
      margin-bottom 1.3em

      font-size 18px

      @media (max-width 640px)
        order 1

        font-size 14px
        text-align center

    &-result
      position relative
      margin-top 52px

      @media (max-width 640px)
        margin-bottom 30px

        order 0
        margin-top 45px

      &:before
        position absolute
        top 50%
        left - $how-video-gap
        content ''
        border-style solid
        border-width 33px 0 33px 13px
        border-color transparent transparent transparent $c-primary

        transform translateY(-50%)

        @media (max-width 640px)
          top -51px
          left 50%

          transform translateX(-50%) rotate(90deg)

      &-text
        margin 0
        padding 12px 11px

        color $c-secondary-3
        font-size 18px
        font-weight 700

        background-color $c-white

        @media (max-width 640px)
          font-size 16px
          line-height 1.4
          text-align center

  &__profile
    margin-top -80px
    padding-top 123px
    padding-bottom 85px

    @media (max-width 768px)
      padding-top 113px
      padding-bottom 46px

    &:before
      background-image linear-gradient(0,#c6c6c6,#e2e2e2)

    .section__title
      margin-bottom .9em

  &__form
    box-sizing border-box
    max-width 674px
    margin 0 auto

    @media (min-width 769px)
      padding-right 30px
      padding-left @padding-right

    .new-form

      &__fieldset

        @media (max-width 768px)
          padding 0
          margin-bottom 10px

          background-color transparent
          box-shadow none

        &:last-of-type
          margin-bottom 0

      &__footer
        @media (max-width 768px)
          margin-top 0

        .button
          @media (max-width 768px)
            margin-right 33px
            margin-left @margin-right

            padding-left 10px
            padding-right @padding-left

      &__checkbox
        margin-bottom 30px

    &-row
      margin-bottom 20px

    &-item
      display flex
      align-items center

      @media (max-width 768px)
        flex-wrap wrap
        justify-content flex-start

      .new-form

        &__label
          flex 1
          margin-right 1.4em
          margin-bottom 0

          font-size 16px
          font-weight 300

          @media (max-width 768px)
            margin-right 0
            margin-bottom .4em

            font-size 11px
            letter-spacing normal

        &__input
          flex 0 0 370px

          @media (max-width 768px)
            flex-basis 100%

          &._select
            flex-basis 260px

            @media (max-width 768px)
              flex-basis 100%
