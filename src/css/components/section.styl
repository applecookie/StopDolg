.section

  &__container
    max-width 1024px
    margin 0 auto
    padding 0 20px

    &-inner
      max-width $container-width
      margin 0 auto

  &-banner__title
    padding 0
    margin 0 0 10px
    border none

    color inherit
    font-size 56px
    font-weight 300
    line-height 1.2
    text-align center
    text-transform uppercase

    @media (max-width 768px)
      margin-bottom 0

      font-size 23px

    &-footnote
      display block
      margin-top .9em

      color inherit
      font-size 19px
      text-transform none

      @media (max-width 768px)
        margin-top 1em

        font-size 14px
        letter-spacing -.4px

  &__title
    $title-gap = 7%
    $title-circle-size = 16px
    margin-bottom 45px
    margin-bottom 1.3em
    // 7% = 74/1024px
    padding 0 $title-gap
    position relative

    color $c-heading-decoration
    font-size 32px
    font-weight 300
    text-transform uppercase

    @media (max-width 768px)
      padding 0
      margin-bottom .87em

      font-size 23px
      text-align center

    &:before
    &:after
      position absolute
      top 50%
      // 40px
      right "calc(100% - %s/2 - %s/2)" % ($title-gap $title-circle-size)
      content ''
      display block

      background-color $c-heading-decoration
      transform translateY(-50%)

      @media (max-width 768px)
        display none

    &:before
      width 100vw
      height 2px

    &:after
      width $title-circle-size
      height @width

      border-radius 50%

    &._negative
      color $c-white

      &:before
      &:after
        background-color $c-white

    &._to-right
      text-align right

      @media (max-width 768px)
        text-align center

      &:before
      &:after
        right auto
        left "calc(100% - %s/2 -  %s/2)" % ($title-gap $title-circle-size)
