.category-list
  display flex
  list-style none
  justify-content space-between

  @media (max-width 1024px)
    display inline-flex
    flex-direction column

  &__item
    margin-right .5em
    margin-bottom 1em

    font-size 18px

    @media (max-width 1024px)
      display flex
      align-items center
      justify-content flex-end
      margin-right 0

    @media (max-width 640px)
      margin-bottom .625em

      font-size 16px

    &:last-child
      margin-right 0

  &__value
    margin-top .55em
    padding .25em .8em

    color $c-primary
    font-weight 700

    background-color $c-white
    border-radius 1em

    @media (max-width 1024px)
      flex 0 0 40%
      margin-top 0
      margin-left .6em
